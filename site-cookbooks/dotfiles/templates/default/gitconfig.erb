[user]
	name = <%= node[:dotfiles][:git][:name] %>
	email = <%= node[:dotfiles][:git][:email] %>

[core]
	editor = nano
	autocrlf = input
	excludesfile = ~/.gitignore
	pager = less -FRX -x 5,9

[push]
	default = current

[branch]
	mergeoptions = --no-ff
	autosetuprebase = always

[rebase]
	autostash = true

[credential]
	helper = store

[merge]
	tool = meld

# Aliases

[pretty]
	graph=%C(red)%h%C(reset) %s%C(yellow)%d %C(bold black)(%an)%C(reset)

[alias]
	history = log --graph --pretty=graph --date=short --decorate -n 10
	ignored = ls-files -o -i --exclude-standard

# UI

[status]
	displayCommentPrefix = false

[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto
	interactive = auto
	pager = true

[color "status"]
	added = green
	changed = yellow
	untracked = red

# Utilities

[gui]
	historybrowser = gitg

[cola]
	tabwidth = 4
	fontdiff = DejaVu Sans Mono,9,-1,5,50,0,0,0,0,0

[git-up "fetch"]
	all = true

[git-up "rebase"]
	auto = false
