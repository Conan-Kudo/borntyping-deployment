[global_config]
  handle_size = 0
  title_hide_sizetext = True
  focus = mouse
  suppress_multiple_term_dialog = True
  enabled_plugins = CustomCommandsMenu, TerminalShot
  title_receive_bg_color = "#1b4c83"
  title_transmit_bg_color = "#1b4c83"
  title_inactive_bg_color = "#d6d6d6"
[keybindings]
  go_left = <Primary><Alt>Left
  go_down = <Primary><Alt>Down
  go_right = <Primary><Alt>Right
  go_up = <Primary><Alt>Up
  broadcast_off = F1
  broadcast_group = F2
  broadcast_all = F3
[profiles]
  [[default]]
    foreground_color = "#ffffff"
    use_system_font = False
    background_darkness = 0.8
    urgent_bell = True
    background_type = transparent
    background_image = /usr/share/backgrounds/linuxmint-petra/rapciu_hope.jpg
    cursor_color = "#eee8d5"
    scroll_background = False
    scroll_on_output = False
    cursor_shape = underline
    font = DejaVu Sans Mono 10
    scrollbar_position = hidden
    word_chars = "-A-Za-z0-9,./?%&#:_~"
    allow_bold = False
    scrollback_infinite = True
    cursor_blink = False
[layouts]
  [[default]]
    [[[child1]]]
      type = Terminal
      parent = window0
    [[[window0]]]
      type = Window
      parent = ""
[plugins]
  [[CustomCommandsMenu]]
    [[[chef client]]]
      command = sudo chef-client
      enabled = True
      name = chef client
    [[[chef client why-run]]]
      command = sudo chef-client --why-run
      enabled = True
      name = chef client
    [[[chef service status]]]
      command = sudo service chef-client status
      enabled = True
      name = chef service status
    [[[chef stacktrace]]]
      command = sudo less /var/chef/cache/chef-stacktrace.out
      enabled = True
      name = chef stacktrace
    [[[chef log]]]
      command = tail /var/log/chef/client.log
      enabled = True
      name = chef client
