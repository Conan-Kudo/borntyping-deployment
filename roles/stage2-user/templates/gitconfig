[user]
    name = {{ git_name }}
    email = {{ git_email }}

[core]
    editor = nano
    autocrlf = input
    excludesfile = ~/.gitignore

[push]
    default = current

[branch]
    mergeoptions = --no-ff
    autosetuprebase = always

[rebase]
    autostash = true

[credential]
    helper = store

#
# Aliases
#

[pretty]
    graph=%C(red)%h%C(reset) %s%C(cyan)%d%C(reset) %C(bold green)(%ar, %an)%C(reset)

[alias]
    # Show logs in a pretty format
    hist = log --graph --pretty=graph --date=short --decorate -n 10
    history = log --graph --pretty=graph --date=short --decorate

    # List ignored files
    ignored = ls-files -o -i --exclude-standard

    # Stash files when rebasing from a remote
    sync = !git fetch && git rebase -p origin/master && git history

[pager]
    # Don't clear the screen when showing the short output from the `hist` alias
    hist = less --no-init

#
# UI
#

[status]
    displayCommentPrefix = false

[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
    interactive = auto
    pager = true

[color "status"]
    added = green
    changed = yellow
    untracked = red

#
# Utilities
#

[merge]
    tool = meld

[gui]
    historybrowser = gitg

[cola]
    tabwidth = 4
    fontdiff = DejaVu Sans Mono,9,-1,5,50,0,0,0,0,0

#
# GitHub
#

# Always use SSH transport instead of HTTPS
[url "git@github.com:"]
    insteadOf = https://github.com/
